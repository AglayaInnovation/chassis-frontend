{
  "name": "@aglaya/api-core",
  "version": "0.0.1",
  "description": "A flexible and type-safe HTTP client library for both browser and Node.js environments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "author": "Monster50",
  "keywords": [
    "api",
    "http-client",
    "fetch",
    "typescript",
    "browser",
    "nodejs",
    "aglaya"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AglayaInnovation/chassis-frontend.git",
    "directory": "packages/api-core"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@aglaya/eslint-config": "*",
    "@aglaya/typescript-config": "*",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "tsup": "^8.2.4",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
