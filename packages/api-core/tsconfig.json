{
  "extends": "@aglaya/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
